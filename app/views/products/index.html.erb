<p id="notice"><%= notice %></p>

<%= form_tag products_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "商品検索", :name => nil %>
  </p>
<% end %>


<%= yield %>
<div class="center jumbotron">
</body>
<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>値段</th>
      <th>店舗</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.shop %></td>
        <td><%= link_to '詳細を見る', product %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
