<p id="notice"><%= notice %></p>
<%= form_tag shop_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "店舗検索", :name => nil %>
  </p>
<% end %>


<%= yield %>
<div class="container">
</body>
<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
      <th>店舗</th>
      <th>タイトル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.shop %></td>
        <td><%= product.title %></td>
        <td><%= link_to '詳細を見る', product %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '商品一覧に戻る', products_path %>
</div>
